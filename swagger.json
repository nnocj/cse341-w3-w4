{
  "openapi": "3.0.0",
  "info": {
    "title": "Business and User API",
    "description": "API for managing users and businesses.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/api/user": {
      "get": {
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "List of users"
          }
        }
      },
      "post": {
        "summary": "Create a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          }
        }
      }
    },
    "/api/user/{id}": {
      "get": {
        "summary": "Get a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User data"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "put": {
        "summary": "Update a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "User deleted"
          }
        }
      }
    },
    "/api/business": {
      "get": {
        "summary": "Get all businesses",
        "responses": {
          "200": {
            "description": "List of businesses"
          }
        }
      },
      "post": {
        "summary": "Create a new business",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Business"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Business created"
          }
        }
      }
    },
    "/api/business/{id}": {
      "get": {
        "summary": "Get a business by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Business data"
          },
          "404": {
            "description": "Business not found"
          }
        }
      },
      "put": {
        "summary": "Update a business by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Business"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Business updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a business by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Business deleted"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "doe@example.com"
          },
          "address": {
            "type": "object",
            "properties": {
              "street": {
                "type": "string",
                "example": "123 Main St"
              },
              "city": {
                "type": "string",
                "example": "Anytown"
              },
              "state": {
                "type": "string",
                "example": "CA"
              },
              "zip": {
                "type": "string",
                "example": "12345"
              }
            }
          },
          "phone": {
            "type": "string",
            "example": "555-1234"
          },
          "birthdate": {
            "type": "string",
            "format": "date",
            "example": "1990-01-01"
          },
          "gender": {
            "type": "string",
            "example": "male"
          }
        },
        "required": ["firstName", "lastName", "email"]
      },
      "Business": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "example": "6893a7d6e87f4023c2f9efa3"
          },
          "businesses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "businessName": {
                  "type": "string",
                  "example": "Jane's Art Gallery"
                },
                "description": {
                  "type": "string",
                  "example": "An art space showcasing modern and abstract artwork."
                },
                "location": {
                  "type": "string",
                  "example": "321 Canvas Ln, Othertown, NY"
                },
                "dateEstablished": {
                  "type": "string",
                  "format": "date",
                  "example": "2016-09-15"
                },
                "contact": {
                  "type": "string",
                  "example": "555-1122"
                }
              },
              "required": ["businessName", "description", "location", "dateEstablished", "contact"]
            }
          }
        },
        "required": ["userId", "businesses"]
      }
    }
  }
}
