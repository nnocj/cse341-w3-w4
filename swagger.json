{
  "openapi": "3.0.0",
  "info": {
    "title": "Business and User API",
    "description": "API for managing users and businesses. Protected routes require JWT Bearer authentication.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://cse341-w3-w4-f3w3.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user (manual sign-up)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login with email and password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful - returns JWT tokens" },
          "400": { "description": "Invalid credentials" }
        }
      }
    },
    "/auth/google": {
      "get": {
        "summary": "Google OAuth login",
        "description": "Redirects user to Google sign-in page.",
        "responses": {
          "302": { "description": "Redirect to Google login" }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "summary": "Refresh access token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "refreshToken": { "type": "string" }
                },
                "required": ["refreshToken"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "New access token issued" },
          "403": { "description": "Invalid refresh token" }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout user",
        "requestBody": {
          "required": false
        },
        "responses": {
          "200": { "description": "Logout successful" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password", "description": "Only for manual sign-up. Stored as a hash." },
          "googleId": { "type": "string", "description": "Only for Google OAuth accounts" },
          "address": {
            "type": "object",
            "properties": {
              "street": { "type": "string" },
              "city": { "type": "string" },
              "state": { "type": "string" },
              "zip": { "type": "string" }
            }
          },
          "phone": { "type": "string" },
          "birthdate": { "type": "string", "format": "date" },
          "gender": { "type": "string" }
        },
        "required": ["firstName", "lastName", "email"]
      }
    }
  }
}
